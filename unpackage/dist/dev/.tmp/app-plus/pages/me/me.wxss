            justify-content: space-around;
    padding: 0 60px;
    font-size: 14px;
}
.me_id .title_id .you {
      font-size: 17px;
      font-weight: bold;
}
.me_id .main_id {
    height: calc(100% - 50px);
    background: #fff;
    padding: 10px;
    overflow: auto;
}
.me_id .main_id .switch_id {
      height: 40px;
      background: #ddd;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
      position: relative;
}
.me_id .main_id .screen {
      height: 80px;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
          -ms-flex-pack: justify;
              justify-content: space-between;
}
.me_id .main_id .screen .item {
        display: inline-block;
        padding: 2px 10px;
        border-right: 1px solid #ccc;
        text-align: center;
}
.me_id .main_id .screen .item ._span {
          padding-bottom: 10px;
}
.me_id .main_id .screen .you ._span {
        color: #39B54A;
        border-bottom: 2px solid #39B54A;
}
.me_id .main_id .list {
      height: calc(100% - 110px);
      overflow: auto;
}
.me_id .main_id .list > ._li {
        list-style: none;
        height: 40px;
        border-bottom: 1px solid #ccc;
